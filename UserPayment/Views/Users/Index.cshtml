@model IEnumerable<UserPayment.Models.User>

@{
    ViewData["Title"] = "Users";
}

<p>
    @Html.ActionLink("Create New", "Create")       
</p>
<table class="table table-striped">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Login)
