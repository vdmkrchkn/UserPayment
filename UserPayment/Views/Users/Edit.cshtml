@model UserPayment.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Edit", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            //<div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value=@Model.Id />
            <div class="form-group">                
                @Html.LabelFor(m => m.Login, "Логин:", new {@class="control-label"})
                @Html.EditorFor(m => m.Login, new {@class="form-control"})
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Пароль:", new {@class="control-label"})                
                @Html.EditorFor(m => m.Password, new {@class="form-control"})                
                @*<span asp-validation-for="Password" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "Details", new { id = @Model.Id })    
</div>

@section Scripts {
    @{Html.RenderPartial("_ValidationScriptsPartial");}
}
