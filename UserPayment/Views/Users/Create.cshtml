@model UserPayment.Models.User

@{
    ViewData["Title"] = "Create";
}

<h2>Create new user</h2>

<hr />
<div class="row">
    <div class="col-md-4">
		@using (Html.BeginForm("Create", "Users", FormMethod.Post, new { @class = "form-horizontal"@*, role = "form"*@ }))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(false, "", new { @class = "text-danger" })
			//<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			//<input type = "hidden" name = "id" value = @Model.Id />

			<div class="form-group">
				@Html.LabelFor(m => m.Login, "Логин:", new { @class = "control-label" })
				@Html.EditorFor(m => m.Login, new { @class = "form-control" })
				@*@Html.ValidationMessageFor(m => m.Login)*@
				@*<span asp-validation-for="Login" class="text-danger"></span>*@
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.Password, "Пароль:", new { @class = "control-label" })
				@Html.EditorFor(m => m.Password, new { @class = "form-control" })
				@*@Html.ValidationMessageFor(m => m.Password)*@
				@*<span asp-validation-for="Password" class="text-danger"></span>*@
			</div>

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		}        
    </div>
</div>

<div>
	@Html.ActionLink("Назад", "Index")    
</div>

@section Scripts {
    @{Html.RenderPartial("_ValidationScriptsPartial");}
}
