@model UserPayment.Models.User

@{
    ViewData["Title"] = "Create";
    const string validationMsg = "";//"некорректное значение";
}

<h2>Create new user</h2>

<hr />
<div class="row">
    <div class="col-md-4">
		@using (Html.BeginForm("Create", "Users", FormMethod.Post, new { @class = "form-horizontal"}))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true, "", new { @class = "text-error" })						

			<div class="control-group">
				@Html.LabelFor(m => m.Login, "Логин:", new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(m => m.Login, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Login, validationMsg, new { @class = "text-error" })
                </div>                    
            </div>

			<div class="control-group">
				@Html.LabelFor(m => m.Password, "Пароль:", new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, validationMsg, new { @class = "text-error" })                    
                </div>                    
            </div>

			<div class="control-group controls">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		}        
    </div>
</div>

<div>
	@Html.ActionLink("Назад", "Index")    
</div>

@section Scripts {
    @{Html.RenderPartial("_ValidationScriptsPartial");}
}
