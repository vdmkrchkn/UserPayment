@model UserPayment.Models.Account

@{
    ViewData["Title"] = "Create Account";
    const string validationMsg = "";//"некорректное значение";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
		@using (Html.BeginForm("Create", "Accounts", FormMethod.Post, new { @class = "form-horizontal" }))
		{
			@Html.AntiForgeryToken()			
			@Html.ValidationSummary(true, "", new { @class = "text-error" })									

			<div class="control-group">
				@Html.LabelFor(m => m.SrcWalletId, "Кошелёк-отправитель:", new { @class = "col-md-2 control-label" })
				<div class="controls col-md-10">
					@Html.EditorFor(m => m.SrcWalletId, new { @class = "form-control" })
                    @*@Html.DropDownList("Id", ViewBag.WalletIds as SelectList)*@                    
					@Html.ValidationMessageFor(m => m.SrcWalletId, validationMsg, new { @class = "text-error" })					
				</div>											
			</div>

			<div class="control-group">
				@Html.LabelFor(m => m.DstWalletId, "Кошелёк-получатель:", new { @class = "col-md-2 control-label" })
                <div class="controls col-md-10">
                    @Html.EditorFor(m => m.DstWalletId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.DstWalletId, validationMsg, new { @class = "text-error" })
                </div>
            </div>

			<div class="control-group">
				@Html.LabelFor(m => m.Price, "Сумма:", new { @class = "col-md-2 control-label" })
                <div class="controls col-md-10">
                    @Html.EditorFor(m => m.Price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Price, validationMsg, new { @class = "text-error" })
                </div>
            </div>

			<div class="control-group">
				@Html.LabelFor(m => m.Comment, "Комментарий:", new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(m => m.Comment, new { @class = "form-control" })                   
                    @Html.ValidationMessageFor(m => m.Comment, validationMsg, new { @class = "text-error" })
                </div>
            </div>

			<div class="control-group">
                <div class="controls">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
		}              
    </div>
</div>

<div>
	@Html.ActionLink("Назад", "Index")    
</div>

@section Scripts {
    @{Html.RenderPartial("_ValidationScriptsPartial");}
}
