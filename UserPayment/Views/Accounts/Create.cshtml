@model UserPayment.Models.Account

@{
    ViewData["Title"] = "Create Account";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">User login</label>
                <input class="form-control" />
                <span class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="SrcWalletId" class="control-label"></label>
                <input asp-for="SrcWalletId" class="form-control" />
                @*@Html.DropDownList("Id", ViewBag.WalletIds as SelectList)*@                   
                <span asp-validation-for="SrcWalletId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DstWalletId" class="control-label"></label>
                <input asp-for="DstWalletId" class="form-control" />
                <span asp-validation-for="DstWalletId" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{Html.RenderPartial("_ValidationScriptsPartial");}
}
